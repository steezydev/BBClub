import { useCall } from '@usedapp/core';

import { BeanzDeployerContract } from '@/lib/contractsProvider';

{{#if isBigNumber}}
const use{{pascalCase method}} = (rawData = false) => {
{{else}}
const use{{pascalCase method}} = () => {
{{/if}}
  const { value, error } =
    useCall({ contract: BeanzDeployerContract, method: '{{method}}', args: [] }) ?? {};
  if (error) {
    throw new Error(error.message);
  }

{{#if isBigNumber}}
  return [rawData ? value?.[0] : value?.[0].toNumber(), error];
{{else}}
  return [value?.[0], error];
{{/if}}
};

export default use{{pascalCase method}};